{
	"name": "flw_m_transaction_votes_incr",
	"properties": {
		"folder": {
			"name": "02_master_dataflow"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_raw_parquet",
						"type": "DatasetReference"
					},
					"name": "sourceVotes"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_master_parquet",
						"type": "DatasetReference"
					},
					"name": "sinkVotesInteraction"
				}
			],
			"transformations": [
				{
					"name": "selectVotesColumn"
				},
				{
					"name": "addExtraColumn"
				}
			],
			"scriptLines": [
				"parameters{",
				"     load_date as string,",
				"     record_source as string,",
				"     creation_user as string,",
				"     process_date as string",
				"}",
				"source(output(",
				"          Id as string,",
				"          PostId as string,",
				"          UserId as string,",
				"          BountyAmount as string,",
				"          VoteTypeId as string,",
				"          CreationDate as string,",
				"          record_source as string,",
				"          load_date as string,",
				"          creation_user as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> sourceVotes",
				"sourceVotes select(mapColumn(",
				"          reference_id = PostId,",
				"          party_id = UserId,",
				"          creation_date = CreationDate",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> selectVotesColumn",
				"selectVotesColumn derive(interaction_id = uuid(),",
				"          deadline_date = \"\",",
				"          answer_count = \"0\",",
				"          comment_count = \"0\",",
				"          favorite_count = \"0\",",
				"          view_count = \"0\",",
				"          score_value = \"0\",",
				"          request_type = \"vote\",",
				"          flag_active = 1,",
				"          load_date = $load_date,",
				"          record_source = $record_source,",
				"          creation_user = $creation_user,",
				"          process_date = $process_date) ~> addExtraColumn",
				"addExtraColumn sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     format: 'parquet',",
				"     filePattern:'lakehouse/master_transaction/year=2008/month=01/t_interaction_votes[n].parquet',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          interaction_id,",
				"          party_id,",
				"          reference_id,",
				"          creation_date,",
				"          deadline_date,",
				"          answer_count,",
				"          comment_count,",
				"          favorite_count,",
				"          view_count,",
				"          score_value,",
				"          request_type,",
				"          flag_active,",
				"          load_date,",
				"          record_source,",
				"          creation_user,",
				"          process_date",
				"     )) ~> sinkVotesInteraction"
			]
		}
	}
}